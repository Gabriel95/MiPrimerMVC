@using MiPrimerMVC
@using Domain.Entities
@model MiPrimerMVC.Models.UserandItemsModel
@{
    ViewBag.Title = "MainPage";
    Layout = "~/Views/Shared/MPLayout.cshtml";
}
<h2>Welcome To Clasifieds! </h2>



<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form action="#" method="get">
                <div class="input-group">
                    <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                    <input class="form-control" id="system-search" name="q" placeholder="Search for" required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <table class="table table-list-search">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Date Added</th>
   
                    </tr>
                </thead>
                <tbody>
                    
                        @foreach (Items ite in Model.Itemses)
                        {
                             <tr>
                                 <td>@Html.ActionLink(@ite.Title, "DetailedItem", "Home", new { @id = ite.Id }, null)</td>
                                 <td>@ite.Category</td>
                                 <td>@ite.Date</td>
                                 
                             </tr>
                        }
                  
                </tbody>
            </table>
        </div>
    </div>
</div>